{
  "version": 2,
  "builds": [
    { 
      "src": "api/index.py", 
      "use": "@vercel/python",
      "config": {
        "buildCommand": "chmod +x build.sh && ./build.sh"
      } 
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "env": {
    "PYTHONUNBUFFERED": "1"
  }
} 